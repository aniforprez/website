---
import "tippy.js/dist/tippy.css";

import type { Placement, Props as TippyProps } from "tippy.js";

export interface Props extends Partial<TippyProps> {
  /**
   * **Default**: `true`
   *
   * BEWARE: You should trust your sources
   * */
  allowHTML?: boolean;

  /**
   * **Default**: `'default'`
   * */
  theme?: string;

  /**
   * **Default**: `'none'`
   * */
  maxWidth?: string;

  /**
   * **Default**: `[15, 150]`
   * */
  delay?: [number, number];

  /**
   * **Default**: `'auto'`
   * */
  placement?: Placement;

  /**
   * **Default**: `true`
   * */
  interactive?: boolean;
}

const props = { ...Astro.props } as Props;
---

<script
  type="application/json"
  data-tooltips-options
  set:html={JSON.stringify(props)}
/>

<script>
  import "./Tooltips.client.ts";
</script>
