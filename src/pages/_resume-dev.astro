---
import "@fontsource-variable/noto-sans-sc";
import "@fontsource-variable/lora";
import { format, parse } from "date-fns";

import resume from "../content/resume.json";
import "../styles/print.css";
---

<html>
  <body class="w-lvw font-sans text-stone-950 print:p-6">
    <h1 class="font-serif text-4xl font-semibold tracking-wide">
      {resume.basics.name}
    </h1>
    <h2 class="font-serif text-2xl text-stone-600">
      {resume.basics.label}
    </h2>
    <div class="flex w-full gap-3 pt-2 text-sm text-stone-500">
      <span class="flex items-end gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
          class="text-stone-900"
          ><path
            d="M3 3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3ZM12.0606 11.6829L5.64722 6.2377L4.35278 7.7623L12.0731 14.3171L19.6544 7.75616L18.3456 6.24384L12.0606 11.6829Z"
          ></path></svg
        >
        <a
          href={`mailto:${resume.basics.email}`}
          class="text-stone-600 underline decoration-stone-400 underline-offset-2"
        >
          {resume.basics.email}
        </a>
      </span>
      <span class="flex items-end gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
          class="text-stone-900"
          ><path
            d="M21 16.42V19.9561C21 20.4811 20.5941 20.9167 20.0705 20.9537C19.6331 20.9846 19.2763 21 19 21C10.1634 21 3 13.8366 3 5C3 4.72371 3.01545 4.36687 3.04635 3.9295C3.08337 3.40588 3.51894 3 4.04386 3H7.5801C7.83678 3 8.05176 3.19442 8.07753 3.4498C8.10067 3.67907 8.12218 3.86314 8.14207 4.00202C8.34435 5.41472 8.75753 6.75936 9.3487 8.00303C9.44359 8.20265 9.38171 8.44159 9.20185 8.57006L7.04355 10.1118C8.35752 13.1811 10.8189 15.6425 13.8882 16.9565L15.4271 14.8019C15.5572 14.6199 15.799 14.5573 16.001 14.6532C17.2446 15.2439 18.5891 15.6566 20.0016 15.8584C20.1396 15.8782 20.3225 15.8995 20.5502 15.9225C20.8056 15.9483 21 16.1633 21 16.42Z"
          ></path></svg
        >
        {resume.basics.phone}
      </span>
      <span class="flex items-center gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
          class="text-stone-900"
          ><path
            d="M18.364 17.364L12 23.7279L5.63604 17.364C2.12132 13.8492 2.12132 8.15076 5.63604 4.63604C9.15076 1.12132 14.8492 1.12132 18.364 4.63604C21.8787 8.15076 21.8787 13.8492 18.364 17.364ZM12 15C14.2091 15 16 13.2091 16 11C16 8.79086 14.2091 7 12 7C9.79086 7 8 8.79086 8 11C8 13.2091 9.79086 15 12 15ZM12 13C10.8954 13 10 12.1046 10 11C10 9.89543 10.8954 9 12 9C13.1046 9 14 9.89543 14 11C14 12.1046 13.1046 13 12 13Z"
          ></path></svg
        >
        {resume.basics.location.city}, {resume.basics.location.region}
      </span>
    </div>
    <div class="flex gap-3 pt-2 text-sm">
      <span class="flex items-center gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
          ><path
            d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
          ></path></svg
        >
        <a
          href="https://github.com/aniforprez"
          class="text-stone-600 underline decoration-stone-400 underline-offset-2"
          >https://github.com/aniforprez</a
        >
      </span>
      <span class="flex items-center gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
          ><path
            d="M18.3362 18.339H15.6707V14.1622C15.6707 13.1662 15.6505 11.8845 14.2817 11.8845C12.892 11.8845 12.6797 12.9683 12.6797 14.0887V18.339H10.0142V9.75H12.5747V10.9207H12.6092C12.967 10.2457 13.837 9.53325 15.1367 9.53325C17.8375 9.53325 18.337 11.3108 18.337 13.6245V18.339H18.3362ZM7.00373 8.57475C6.14573 8.57475 5.45648 7.88025 5.45648 7.026C5.45648 6.1725 6.14648 5.47875 7.00373 5.47875C7.85873 5.47875 8.55173 6.1725 8.55173 7.026C8.55173 7.88025 7.85798 8.57475 7.00373 8.57475ZM8.34023 18.339H5.66723V9.75H8.34023V18.339ZM19.6697 3H4.32923C3.59498 3 3.00098 3.5805 3.00098 4.29675V19.7033C3.00098 20.4202 3.59498 21 4.32923 21H19.6675C20.401 21 21.001 20.4202 21.001 19.7033V4.29675C21.001 3.5805 20.401 3 19.6675 3H19.6697Z"
          ></path></svg
        >
        <a
          href="https://www.linkedin.com/in/anirudh-sylendranath/"
          class="text-stone-600 underline decoration-stone-400 underline-offset-2"
          >https://www.linkedin.com/in/anirudh-sylendranath/</a
        >
      </span>
    </div>
    <hr class="mt-4 mb-2 h-[1px] w-full border-dashed border-stone-300" />
    <div>
      <h2 class="font-serif text-xl font-semibold tracking-wide">Summary</h2>
      <p class="pt-2 text-sm">{resume.basics.summary}</p>
    </div>
    <hr class="mt-4 mb-2 h-[1px] w-full border-dashed border-stone-300" />
    <div>
      <h2 class="font-serif text-xl font-semibold tracking-wide">Skills</h2>
      <div class="pt-2 text-sm">
        {
          resume.skills.map((skill) => (
            <div class="not-first:pt-1">
              <span class="font-bold">{skill.name}:</span>{" "}
              {skill.keywords.join(", ")}
            </div>
          ))
        }
      </div>
    </div>
    <hr class="mt-4 mb-2 h-[1px] w-full border-dashed border-stone-300" />
    <div>
      <h2 class="font-serif text-xl font-semibold tracking-wide">Experience</h2>
      <div class="pt-2 text-sm">
        {
          resume.work.map((exp) => (
            <div class="not-last:pb-3">
              <div class="flex gap-1 pb-2">
                <span class="font-bold">{exp.name}</span>|
                <span class="font-light">{exp.position}</span>
                <span class="ml-auto">
                  {format(
                    parse(exp.startDate, "yyyy-MM", new Date()),
                    "LLL, yyyy",
                  )}{" "}
                  —{" "}
                  {exp.endDate
                    ? format(
                        parse(exp.endDate, "yyyy-MM", new Date()),
                        "LLL, yyyy",
                      )
                    : "Current"}
                </span>
              </div>
              <div>
                <ol class="pl-6">
                  {exp.highlights.map((hl) => (
                    <li class="list-disc pb-1">{hl}</li>
                  ))}
                </ol>
              </div>
            </div>
          ))
        }
      </div>
      <hr class="mt-4 mb-2 h-[1px] w-full border-dashed border-stone-300" />
      <div>
        <h2 class="font-serif text-xl font-semibold tracking-wide">
          Education
        </h2>
        <div class="pt-2 text-sm">
          {
            resume.education.map((edu) => (
              <div>
                <div class="flex pb-3">
                  <span class="font-bold">{edu.institution}</span>
                  <span class="ml-auto">
                    {format(
                      parse(edu.startDate, "yyyy", new Date()),
                      "LLL, yyyy",
                    )}{" "}
                    —{" "}
                    {edu.endDate
                      ? format(
                          parse(edu.endDate, "yyyy", new Date()),
                          "LLL, yyyy",
                        )
                      : "Current"}
                  </span>
                </div>
                <span>
                  {edu.studyType} - {edu.area}
                </span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </body>
</html>
